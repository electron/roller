{
  "name": "roller",
  "version": "1.0.0",
  "private": true,
  "description": "automate the submodule update process",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "prettier --check \"src/**/*.ts\"",
    "postinstall": "tsc",
    "prettier:write": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install",
    "roll-chromium": "DEBUG=roller* node lib/chromium-cron.js",
    "roll-node": "DEBUG=roller* node lib/node-cron.js",
    "roll-node-orb": "DEBUG=roller* node lib/node-orb-handler.js",
    "start": "DEBUG=roller* probot run ./lib/index.js",
    "test": "jest --config=jest.json --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/electron/roller.git"
  },
  "author": "Shelley Vohr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/electron/roller/issues"
  },
  "homepage": "https://github.com/electron/roller#readme",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.0.0",
    "@types/node": "^15.0.3",
    "@types/semver": "^6.0.1",
    "husky": "^6.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^1.19.1",
    "ts-jest": "^29.0.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@octokit/auth-app": "^3.4.0",
    "@octokit/rest": "^18.12.0",
    "@octokit/webhooks-types": "^4.13.1",
    "debug": "^3.1.0",
    "probot": "^12.2.8",
    "semver": "^7.5.2"
  },
  "lint-staged": {
    "*.ts": "prettier --write"
  }
}
